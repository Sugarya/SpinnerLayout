        <!--/>-->


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        >


        <RelativeLayout
            android:id="@+id/tvContainer2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f0ffff">

            <TextView
                android:id="@+id/tvTitleExpand2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text=" 展开 " />

            <TextView
                android:id="@+id/tvTitleCollapse2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/tvTitleExpand2"
                android:text=" 收起 " />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/containerView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvContainer2"
            android:layout_below="@id/tvContainer2"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/containerFooter2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="140dp"
                android:layout_marginTop="-140dp"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


